<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block class="Celebros\ConversionPro\Block\Catalog\Product\ProductList\RecommendedMessage" before="search_result_list.celebros_banner" name="search_result_list.celebros_recommended" template="catalog/product/list/recommended_message.phtml"/>
            <block class="Celebros\ConversionPro\Block\Catalog\Product\ProductList\Banner" before="search.result" name="search_result_list.celebros_banner" template="catalog/product/list/banner.phtml"/>
            <block class="Celebros\ConversionPro\Block\Analytics\View" name="catalogsearch_celebros_analytics" after="-" template="analytics/tracking.search.phtml"/>
            <block class="Magento\Framework\View\Element\Template" name="conversionpro.js" after="-" template="Celebros_ConversionPro::catalog/js.phtml" />
        </referenceContainer>
        <referenceBlock name="catalogsearch.leftnav" remove="true"/>
        <referenceContainer name="sidebar.main">
            <block class="Magento\LayeredNavigation\Block\Navigation\Search" name="celebros.catalogsearch.leftnav" before="-" template="Magento_LayeredNavigation::layer/view.phtml">
                <block class="Magento\LayeredNavigation\Block\Navigation\State" name="celebros.catalogsearch.navigation.state" as="state"/>
                <block class="Celebros\ConversionPro\Block\LayeredNavigation\Navigation\FilterRenderer" name="celebros.catalogsearch.navigation.renderer" as="renderer" template="Celebros_ConversionPro::layered_navigation/layer/filter.phtml"/>
            </block>
        </referenceContainer>
    </body>
</page>