<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <conversionpro>
            <general_settings>
                <enabled>1</enabled>
                <host></host>
                <port>6035</port>
                <sitekey></sitekey>
            </general_settings>
            <display_settings>
                <campaigns_enabled>1</campaigns_enabled>
                <campaigns_type>catalogsearch_result_index:recommended_messages,catalogsearch_result_index:banners,catalog_category_view:banners,catalog_category_view:recommended_messages</campaigns_type>
                <filter_multiselect_enabled>1</filter_multiselect_enabled>
                <collapse>0</collapse>
                <collapse_qty>4</collapse_qty>
                <go_to_product_on_one_result>0</go_to_product_on_one_result>
                <filter_price_type>default</filter_price_type>
                <filter_price_position>1</filter_price_position>
                <fallback_redirect>0</fallback_redirect>
                <fallback_redirect_url></fallback_redirect_url>
            </display_settings>
            <nav_to_search>
                <enabled>1</enabled>
                <nav_to_search_search_by>textual</nav_to_search_search_by>
                <category_query_type>name</category_query_type>
                <relevance_rename>0</relevance_rename>
            </nav_to_search>
            <anlx_settings>
                <host></host>
                <cid></cid>
            </anlx_settings>
            <advanced>
                <request_lifetime>13600</request_lifetime>
                <request_show>0</request_show>
            </advanced>
        </conversionpro>
    </default>
</config>